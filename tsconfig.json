{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"jsx": "preserve",
		"jsxImportSource": "solid-js",
		"allowJs": true,
		"strict": true,
		"strictNullChecks": true,
		"verbatimModuleSyntax": true,
		"noEmit": true,
		"types": ["vinxi/types/client"],
		"isolatedModules": true,
		"paths": {
			"@/*": ["./src/*"]
		}
	}
}
